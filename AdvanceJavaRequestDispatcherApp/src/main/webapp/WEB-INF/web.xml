<?xml version="1.0" encoding="UTF-8"?>
<elements>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee 
                             http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
        <welcome-file>success.html</welcome-file>
    </welcome-file-list>

    <!-- Servlet Configuration -->
    <servlet>
        <servlet-name>LoginValidate</servlet-name>
        <servlet-class>com.excelr.LoginValidate</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginValidate</servlet-name>
        <url-pattern>/Validate</url-pattern>
    </servlet-mapping>

</web-app>
</elements>
